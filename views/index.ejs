<%- include("partials/header") %>
    <div class="table-container">
        <h2 class="title">
            Todo list
        </h2>
        <div>
            <a class="btn" href="/add-todo">Add todo</a>
        </div>
        <br>
        <table>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>Action</th>
            </tr>
            <% for(let i=0; i <todos.length; i++){ %>
                <tr>
                    <td>
                        <%= todos[i].title %>
                    </td>
                    <td>
                        <%= todos[i].description %>
                    </td>
                    <td>
                        <%= moment(todos[i].createdAt).format("MMM d, Y h:m:s") %>
                    </td>
                    <td>
                        <%= moment(todos[i].updatedAt).format("MMM d, Y hh:mm:ss") %>
                    </td>
                    <td>
                        <a class="btn" href="/update-todo?id=<%= todos[i]._id %>">Edit</a>
                        <a class="btn" href="/delete-todo?id=<%= todos[i]._id %>">Delete</a>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
    <%- include("partials/footer") %>